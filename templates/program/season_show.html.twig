{% extends 'base.html.twig' %}

{% block title %}Série
	{{ program.title }}
{% endblock %}

{% block body %}

	<h1>{{program.title}}
		| Saison
		{{season.number}}
	</h1>
	<p>{{ program.synopsis }}</p>
	<p>Catégorie :
		{{ program.category.name }}</p>

	<div>
		{% for episode in season.episodes %}
			<p>Episode :
				{{episode.number}}</p>
			<p>Description :
				{{episode.title}}</p>
			<a href="{{ path('program_episode_show', { program: program.id, season: season.id, episode: episode.id }) }}">
				Détails de l'épisode</a>
		</a>
		<br>

	{% endfor %}
	<a href="{{ path('program_show', { id: program.id} ) }}">
		Retour à la page détaillée de la série</a><br>
	<a href="{{ path('program_index') }}">

		Retour à la liste des séries
	</a>
</a></div>{% endblock %}
